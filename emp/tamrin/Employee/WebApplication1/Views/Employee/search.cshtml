@{
    ViewBag.Title = "Search Employees";
}

<h2>Search Employees</h2>

<div class="input-group mb-3">
    <input type="text" id="searchTerm" class="form-control" placeholder="Search term...">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="btnSearch">Search</button>
        <button class="btn btn-outline-secondary" type="button" id="btnShowAll">Show All</button>
    </div>
</div>

<div id="resultContainer">
    <!-- The search results will be displayed here using AJAX -->
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Search button click event
            $("#btnSearch").click(function () {
                var searchTerm = $("#searchTerm").val();
                searchEmployees(searchTerm);
            });

            // Show All button click event
            $("#btnShowAll").click(function () {
                searchEmployees("");
            });

            function searchEmployees(searchTerm) {
                $.ajax({
                    url: "@Url.Action("Search", "Employee")",
                    type: "POST",
                    data: { searchTerm: searchTerm },
                    success: function (data) {
                        $("#resultContainer").html(data);
                    }
                });
            }
        });
    </script>
}



