@model List<Employee>

@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

<div class="input-group mb-3">
    <input type="text" id="searchTerm" class="form-control" placeholder="Search by first name or last name..."
           value="@ViewBag.SearchTerm">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="btnSearch">Search</button>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Occupation</th>
            <th>Department</th>
            <th>Phone Number</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.email</td>
                <td>@employee.occupation</td>
                <td>@employee.departamentId</td>
                <td>@employee.phoneNumber</td>
                <td>@employee.address</td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            // Search button click event
            $("#btnSearch").click(function () {
                var searchTerm = $("#searchTerm").val();
                window.location.href = "/Employee/Index?searchTerm=" + searchTerm;
            });
        });
    </script>
}



