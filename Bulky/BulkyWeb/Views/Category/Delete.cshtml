@model Category
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post">
            <input asp-for="Id" hidden/>
            <div class="border p-3 mt-4">
                
               
                <div class="form-floating py-2 col-12">

                    <label asp-for="Name" disable class="form-control  shadow border-0"> </label>
                    <input asp-for="Name" class="ms-2" type="text" />
                   
                </div>
                <div class="form-floating py-2 col-12">

                    <label asp-for="DisplayOrder" disable class="form-control  shadow border-0"> </label>
                    <input asp-for="DisplayOrder" class="ms-2" type="text" />

                </div>

                    <div class="row mt-3">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Delete</button>
                        </div>
                        <div class="col-6 col-md-3">

                            <a asp-controller="Category" asp-action="Index" class="btn btn-danger border form-control">
                                Back to List
                            </a>
                        </div>
        </form>
    </div>
</div>





